<% if @current_user.privileges == nil or @current_user.privileges < 3 %>
  <%= render 'layouts/vheader' %>
<% else %>
  <%= render 'layouts/cheader' %>
<% end %>
<div class="container">
  <div class="box">
	<div class="col-md-12"><br>   
		  	<div class="well well-lg" style="height: 500px;">
				<h2 class='User_Header'><%=@current_user.username%></h2>
				<div class="users">
				<table style="width: 100%;">
				  <tr>
				    <th>Title</th>
				    <th></th>
				    <th></th>
				  </tr>
				  	<%= link_to 'New article', new_article_path %>
					  	<% articles = Article.all %>
					  	<% articles.each do |articles| %>
						    <tr>
						      <td><%= articles.title %></td>						      
						      <td><%= link_to 'Show', article_path(articles) %></td>
						      <td><%= link_to 'Edit', edit_article_path(articles) %></td>
						    </tr>
				  		<% end %>
				</table>
				</div>
			</div>
  		</div>
	</div>