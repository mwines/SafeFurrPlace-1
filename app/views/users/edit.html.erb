<%= render 'layouts/vheader' %><br><br>
<div class='container'>
  <div class="row text-center">
  <div class="well well-lg">
<% @page_title = "UserAuth | Signup" -%>
<div class= "Sign_Form" style="height: 300px;">
  <h2>Edit User</h2>
  
      <%= form_for :user, url: user_path(@user), method: :patch do |f| %>
        <div class="col-md-6 text-center">
          <p>          
            First Name:<br> <%= f.text_field :firstname%>
          </p>

          <p>          
            Last Name:<br> <%= f.text_field :lastname%>
          </p>

          <p>
            Email:<br> <%= f.text_field :email%>
          </p>
        </div>
        <div class="col-md-6 text-center">
          <p>          
            Username:<br> <%= f.text_field :username%>
          </p>

          <p>     
            Privileges:<br><%= f.number_field :privileges %>
            
          
          </p>
          <p>
            <%= f.submit :Edit %>
          </p>
        </div>
      <% end %>

      <% if @user.errors.any? %>
      <ul class="Signup_Errors">
        <% for message_error in @user.errors.full_messages %>
          <li>* <%= message_error %></li>
          <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>
